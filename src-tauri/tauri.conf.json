{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bili Live Hime",
  "version": "0.2.0",
  "identifier": "com.rsplwe.bili-live-hime",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "哔哩哔哩直播姬（仮）",
        "width": 900,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "nsis",
      "app",
      "dmg"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese"
        ]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}